function this_week.day_start {
    let _today = 2460049;
    if day_start = "sun" {
        let day = @scheme.jwsn( _today )[.day];
    } else {
        let day = @scheme.jwn( _today )[.day];
    };
    let start = _today - day + 1;
    result = start .. ( start + 6 );
};

write nl;
write @text( @this_week ) nl;
write @text( @this_week.sun ) nl;


