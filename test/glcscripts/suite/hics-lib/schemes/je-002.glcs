// je-003.glcs  Create je scheme format table.

let sch = "je";

let d1 = 2460050;
let d2 = 2460051;
let d3 = 2460417;

let so = @sch:object.(sch);
let sfl = so[formats];
let size = @size( sfl );
let index = 0;

write nl;
write "<table class='basic data'>" nl;
write "<tr><th>Code</th><th>Rule</th><th>Pseudo</th><th>Example</th><th>Note</th></tr>" nl;

do
    let fmt = sfl[(index)];
    let sig = sch + ":" + fmt;
    let fo = @fmt:object.(sig);
    let note = @if(fo[visible], "", "H");
    if so[default:in] = fmt or so[default:out] = fmt
        if @size( note ) > 0
            note += ", ";
        endif
        note += "D";
    endif
    if fo[shorthand]
        if @size( note ) > 0
            note += ", ";
        endif
        note += "S";
    endif
    
    let p = fo[pseudo:in];
    if @size(p) > 0
        p = "<b>Input:</b> " + p + "<br />";
    endif
    p = "<td>" + p + "<b>Output:</b> " + fo[pseudo:out] + "</td>";

    let row = "<tr><td><b>" + fo[code] + "</b></td>"
      + "<td>" +fo[rules] + "</td>"
      + p
      + "<td class='example'>" + @text.(sig)(d1) + "<br />"
      + @text.(sig)(d2) + "<br />"
      + @text.(sig)(d3) + "</td>"
      + "<td>" + note + "</td></tr>";

    write row nl;

    index += 1;
    until index = size;
loop

write "<tr><td colspan='5'>Notes: H = Hidden, D = Default, S = Range shortcut supported." + 
    " Example days = " + d1 ", " d2 + " and " d3 + " jdn</td></tr>" nl;
write "</table>" nl;


