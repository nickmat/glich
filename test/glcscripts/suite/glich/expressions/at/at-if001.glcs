// at-if001.hcs - Test @if function works with if statement.

write nl;
if @if(true,true,false) {
    write "It's true" nl;
};

let test = "hidden";
if false {
    test = @if( false, "not this", "but this" );
};
write test nl;
if true {
    test = @if( false, "not this", "but this" );
};
write test nl;

write "We're done" nl;

/*[OUTPUT]

It's true
hidden
but this
We're done

[OUTPUT]*/
