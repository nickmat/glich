// object007.glcs  Test creating and using objects.

object complex {
    values real imaginary;
    function add( comp ) {
        if comp[.object] = "complex"
            result = {complex real+comp[real], imaginary+comp[imaginary]};
        else
            result = error "Must have 'complex' argument";
        endif
    }
}

let c1 = {complex 5, 9};
let c2 = {complex 20, 6};
let c3 = c1.add(c2);

writeln "";
writeln c3;
writeln c1.add( 1 );
writeln c1;


