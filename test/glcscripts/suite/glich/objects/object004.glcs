// object004.glcs  Test creating and using objects.

object complex {
    values real imaginary;
    function add( comp ) {
        if @object( comp ) = "complex"
            result = {complex real+comp[real], imaginary+comp[imaginary]};
        else
            result = @error( "Must have 'complex' argument" );
        endif
    };
};

let c1 = {complex 5, 9};
let c2 = {complex 20, 6};

write nl;
write c1@add( c2 ) nl;
write c1@add( 1 ) nl;


