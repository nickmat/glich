// string001.glcs - @string( value ) // convert value to string.

write nl;


let a = null;
let v = @string( a );
write v, a[.type], v[.type] nl;
a = true;
let v = @string( a );
write v, a[.type], v[.type] nl;
a = 123n;
let v = @string( a );
write v, a[.type], v[.type] nl;
a = 345f;
let v = @string( a );
write v, a[.type], v[.type] nl;
a = 1.2;
let v = @string( a );
write v, a[.type], v[.type] nl;
a = 10 .. 20;
let v = @string( a );
write v, a[.type], v[.type] nl;
a = 50 | 5 .. 10;
let v = @string( a );
write v, a[.type], v[.type] nl;
a = {:,11};
let v = @string( a );
write v, a[.type], v[.type] nl;
a = @error( "Test" );
let v = @string( a );
write v, a[.type], v[.type] nl;


