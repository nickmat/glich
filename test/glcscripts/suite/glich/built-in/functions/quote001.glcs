// quote001.glcs - @quote( value ) // convert value to a quoted string.

write nl;


let a = null;
let v = @quote( a );
write v, @type( a ), @type( v ) nl;
a = true;
let v = @quote( a );
write v, @type( a ), @type( v ) nl;
a = 123n;
let v = @quote( a );
write v, @type( a ), @type( v ) nl;
a = 345f;
let v = @quote( a );
write v, @type( a ), @type( v ) nl;
a = 1.2;
let v = @quote( a );
write v, @type( a ), @type( v ) nl;
a = 10 .. 20;
let v = @quote( a );
write v, @type( a ), @type( v ) nl;
a = 50 | 5 .. 10;
let v = @quote( a );
write v, @type( a ), @type( v ) nl;
a = {:,11};
let v = @quote( a );
write v, @type( a ), @type( v ) nl;
a = @error( "Test" );
let v = @quote( a );
write v, @type( a ), @type( v ) nl;


