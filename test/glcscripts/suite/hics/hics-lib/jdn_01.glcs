// jdn_01.glcs  -  Uppercase version of hics standard library

grammar D {
    fields day;
    alias pseudo { ddddd, day; }
    format d "{day}";
    preferred d;
}

scheme JDN {
    name "Julian Day Number";
    base jdn;
    grammar D;
}

let d = 2432617;
let t = "2432617";
let r = {JDN 2432617};

let d_t = text.JDN:d d;
let d_r = record.JDN d;
let t_d = date.JDN:d t;
let t_r = record.JDN:d t;
let r_d = date r;
let r_t = text.:d r;

writeln "";
writeln "text.JDN:d cast: " + d[.type] + ", " + d_t + ", " + d_t[.type];
writeln "record cast:     " + d[.type] + ", " + d_r + ", " + d_r[.type];
writeln "date.JDN:d cast: " + t[.type] + ", " + t_d + ", " + t_d[.type];
writeln "record.:d cast:  " + t[.type] + ", " + t_r + ", " + t_r[.type];
writeln "date.JDN cast:   " + r[.type] + ", " + r_d + ", " + r_d[.type];
writeln "text.JDN:d cast: " + r[.type] + ", " + r_t + ", " + r_t[.type];


