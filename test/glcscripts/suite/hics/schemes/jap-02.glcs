// jap-02.glcs  - Test version of Julian Annunciation Pisa using scheme epoch sub-statement.

lexicon W {
    name "Weekday names";
    fieldname wday;
    lang en;
    pseudo    Weekday,  WDay;
    tokens {
        1, "Monday",    "Mon";
        2, "Tuesday",   "Tue";
        3, "Wednesday", "Wed";
        4, "Thursday",  "Thur";
        5, "Friday",    "Fri";
        6, "Saturday",  "Sat";
        7, "Sunday",    "Sun";
    }
}

lexicon M {
    name "Month names";
    fieldname month;
    lang en;
    pseudo     Month,     Mon;
    tokens {
        1,  "January",   "Jan";
        2,  "February",  "Feb";
        3,  "March",     "Mar";
        4,  "April",     "Apr";
        5,  "May";
        6,  "June",      "Jun";
        7,  "July",      "Jul";
        8,  "August",    "Aug";
        9,  "September", "Sep";
        10, "October",   "Oct";
        11, "November",  "Nov";
        12, "December",  "Dec";
    }
}

grammar JAP {
    fields year month day;
    optional wday;
    calculated cyear;
    rank cyear, month, day;
    lexicons M, W;
    alias pseudo { w wday; dd day; mm month; yyyy cyear; }
    alias unit { d day; m month; y year; }
    format  dmc, "{day} |{month:M:a} |{cyear}";
    format  wdmc, "{wday:W:a} |{day} |{month:M:a} |{cyear}";
    format  out {
        output "{day::os} |{month:M} |{cyear}";
    }
    preferred dmc;
}

scheme JAP {
    name "Julian Annunciation Pisa";
    base julian;
    epoch 1721142;   // j:dmy# 25 Mar 0
    grammar JAP;
}

writeln "";
writeln record.JAP 2360328 + ", " + record.JAP 2360329;
writeln record.JAP:dmc "24 mar 1750" + ", " + record.JAP:dmc "25 Mar 1751";
write @text.JAP:wdmc( 2360328 ), @text.JAP:wdmc( 2360329 ) nl;
write @text.JAP:wdmc( {s:JAP 1750,3,24} ), @text.JAP:wdmc( {s:JAP 1750,3,25} ) nl;
write @text.JAP:wdmc ({s:JAP ,3,24,1750}.input), @text.JAP:wdmc ({s:JAP ,3,25,1751}.input) nl;
write @date.JAP:dmc( "24 mar 1750" ), @date.JAP:dmc( "25 Mar 1751" ) nl;
write @date.JAP:dmc( {s:JAP 1750,3,24} ), @date.JAP:dmc( {s:JAP 1750,3,25} ) nl;
write @date.JAP:dmc( {s:JAP ,3,24,1750}.input ), @date.JAP:dmc({s:JAP ,3,25,1751}.input ) nl;
write @text.JAP:out( 2432814 ) nl;

