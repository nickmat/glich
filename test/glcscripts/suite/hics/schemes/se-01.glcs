// se-01.glcs  - Test version of Julian Spanish Era using scheme epoch sub-statement.

lexicon W {
    name "Weekday names";
    fieldname wday;
    lang en;
    pseudo    Weekday,  WDay;
    tokens {
        1, "Monday",    "Mon";
        2, "Tuesday",   "Tue";
        3, "Wednesday", "Wed";
        4, "Thursday",  "Thur";
        5, "Friday",    "Fri";
        6, "Saturday",  "Sat";
        7, "Sunday",    "Sun";
    }
}

lexicon M {
    name "Month names";
    fieldname month;
    lang en;
    pseudo     Month,     Mon;
    tokens {
        1,  "January",   "Jan";
        2,  "February",  "Feb";
        3,  "March",     "Mar";
        4,  "April",     "Apr";
        5,  "May";
        6,  "June",      "Jun";
        7,  "July",      "Jul";
        8,  "August",    "Aug";
        9,  "September", "Sep";
        10, "October",   "Oct";
        11, "November",  "Nov";
        12, "December",  "Dec";
    }
}

grammar SE {
    fields year month day;
    optional wday;
    calculated cyear;
    rank cyear, month, day;
    lexicons M, W;
    alias pseudo { w wday; dd day; mm month; yyyy cyear; }
    alias unit { d day; m month; y year; }
    format  dmc, "{day} |{month:M:a} |{cyear}";
    format  wdmc, "{wday:W:a} |{day} |{month:M:a} |{cyear}";
    format  out {
        output "{day::os} |{month:M} |{cyear}";
    }
    preferred dmc;
}

scheme SE {
    name "Julian Spanish Era";
    base julian;
    epoch 1707544;   // j:dmy# 1 Jan -37
    grammar SE;
}

writeln "";
writeln record.SE 2360610 + ", " + record.SE 2360611;
writeln record.SE:dmc "31 dec 1788" + ", " + record.SE:dmc "1 jan 1789";
writeln text.SE:wdmc 2360610 + ", " + text.SE:wdmc 2360611;
writeln text.SE:wdmc {s:SE 1750,12,31} + ", " +
    text.SE:wdmc {s:SE 1751,1,1};
writeln text.SE:wdmc ({s:SE ,12,31,1788}.input) + ", " +
    text.SE:wdmc ({s:SE ,1,1,1789}.input);
writeln date.SE:dmc "31 dec 1788" + ", " + date.SE:dmc "1 jan 1789";
writeln date.SE:dmc {s:SE 1750,12,31} + ", " +
    date.SE:dmc {s:SE 1751,1,1};
writeln date.SE:dmc ({s:SE ,12,31,1788}.input) + ", " +
    date.SE:dmc ({s:SE ,1,1,1789}.input);
writeln text.SE:out 2432814;

