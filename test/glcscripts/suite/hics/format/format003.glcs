// format003.glcs  Test unit format declaration

grammar G { 
    fields year month day;
    format DEF "{year}| {month}| {day}";
}

scheme J { base julian; grammar G; }

writeln "";
writeln text.J:DEF 2432814;
writeln text.J:DEF (2432809..2432814);
writeln text.J:DEF (2432809..2432814 | 2432617..2432624);

