// julian-01.glcs  -  Uppercase version of hics standard library

lexicon M {
    name "Month names";
    fieldname month;
    lang en;
    pseudo     Month,     Mon;
    tokens {
        1,  "January",   "Jan";
        2,  "February",  "Feb";
        3,  "March",     "Mar";
        4,  "April",     "Apr";
        5,  "May";
        6,  "June",      "Jun";
        7,  "July",      "Jul";
        8,  "August",    "Aug";
        9,  "September", "Sep";
        10, "October",   "Oct";
        11, "November",  "Nov";
        12, "December",  "Dec";
    }
}

grammar J {
    fields year month day;
    lexicons M;
    format dmy "{day} |{month:M:a} |{year}";
    format mdy "{month:M:a} |{day}, |{year}";
    preferred mdy;
}

scheme G {
    name "Gregorian";
    base gregorian;
    grammar J;
}

write text.G:dmy (2459946..2460310) + ", " + text.G:dmy (2459977..2460004);

