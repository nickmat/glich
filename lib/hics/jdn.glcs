grammar d {
    name "Day Count";
    fields day;
    alias pseudo { dddd day; }
    alias unit { d day; }
    format d "{day}";
    preferred d;
}

scheme jdn {
    name "Julian Day Number";
    base jdn;
    grammar d;
}

scheme mjd {
    name "Modified Julian Day";
    base jdn epoch:2400002;
    grammar d;
    visible no;
}

scheme rd {
    name "Rata Die";
    base jdn epoch:1721426; // g:dmy# 1 Jan 1J
    grammar d;
    visible no;
}

