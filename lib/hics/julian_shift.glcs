// Uses lexicon statements from julian.glcs

grammar j_sh {
    name "Julian shifted epoch";
    fields year month day;
    calculated cyear;
    optional wday;
    rank cyear month day;
    lexicons m w;
    alias pseudo { w wday; dd day; mm month; yyyy cyear; }
    alias unit { d day; m month; y year; }
    use epoch;
    format  dmc "{day} |{month:m:a} |{cyear}";
    format  dmcy "{day} |{month:m:a} |{cyear/year}";
    format  wdmcy "{wday:w:a} |{day} |{month:m:a} |{cyear/year}";
    format "wdmcy+" "{wday:w} |{day} |{month:m} |{cyear/year}";
    format  out { output "{day::os} |{month:m} |{cyear/year}"; }
    format  full { output "{wday:w} |{day::os} |{month:m} |{cyear/year}"; }
    format  mdcy "{month:m:a} |{day}, |{cyear/year}";
    format "mdcy+" "{month:m} |{day}, |{cyear/year}";
    format  wmdcy "{wday:w:a}, |{month:m:a} |{day}, |{cyear/year}";
    format "wmdcy+" "{wday:w}, |{month:m} |{day}, |{cyear/year}";
    format  cdef {
        inout "{cyear}| {month}| {day}";
        style hidden;
    }
    preferred dmcy;
}

scheme ja {
    name "Julian Annunciation Florence";
    base julian;
    epoch 1721507;    // j:dmy# 25 Mar 1
    grammar j_sh;
}

scheme jap {
    name "Julian Annunciation Pisa";
    base julian;
    epoch 1721142;    // j:dmy# 25 Mar 0
    grammar j_sh;
}

scheme jn {
    name "Julian Nativity";
    base julian;
    epoch 1721417;    // j:dmy# 25 Dec 0
    grammar j_sh;
}

