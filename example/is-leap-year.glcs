// Test if a given Gregorian year is a leap year

//let year = @read( "Enter year: " );
let year = "2023";

let days = @date(year)[.span];

let answer = "[" + year + "] is not a valid year.";
if days = 365
    answer = year + " is not a leap year.";
elseif days = 366
    answer = year + " is a leap year.";
endif

write answer;

/*[OUTPUT]
2023 is not a leap year.
[OUTPUT]*/
